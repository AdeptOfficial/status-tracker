# Status-Tracker Environment Variables
# Copy to .env and fill in values
# Docker Compose: These become container environment variables
# Local dev: Loaded by pydantic-settings from .env file

# ===========================================
# Core Settings
# ===========================================

# Timezone
TZ=America/Chicago

# Database path (4 slashes = absolute path /config/tracker.db)
DATABASE_URL=sqlite:////config/tracker.db

# qBittorrent (accessed via Gluetun VPN container in Docker)
QBIT_HOST=gluetun
QBIT_PORT=8080
QBIT_USERNAME=admin
QBIT_PASSWORD=

# Jellyfin external URL (for "Watch Now" deep links - what users access)
# Change to your actual Jellyfin URL
JELLYFIN_URL=http://localhost:8096

# Download progress polling interval (seconds)
POLL_INTERVAL=5

# ===========================================
# Shoko Integration (Anime Metadata)
# ===========================================

ENABLE_SHOKO=true
SHOKO_HOST=shoko
SHOKO_PORT=8111
SHOKO_API_KEY=

# ===========================================
# Timeout Checker
# ===========================================

# Marks requests as TIMEOUT if stuck too long
ENABLE_TIMEOUT_CHECKER=true
DOWNLOADING_TIMEOUT=1440
IMPORTING_TIMEOUT=60

# ===========================================
# Deletion Sync (Optional)
# ===========================================

# Enable cross-service deletion sync
ENABLE_DELETION_SYNC=false

# Service API connections (container names on shared Docker network)
SONARR_HOST=sonarr
SONARR_PORT=8989
SONARR_API_KEY=

RADARR_HOST=radarr
RADARR_PORT=7878
RADARR_API_KEY=

JELLYFIN_HOST=jellyfin
JELLYFIN_PORT=8096
JELLYFIN_API_KEY=

JELLYSEERR_HOST=jellyseerr
JELLYSEERR_PORT=5055
JELLYSEERR_API_KEY=

# Admin Users (comma-separated Jellyfin user IDs)
# Required for deletion sync and library sync features
ADMIN_USER_IDS=
